<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:background="@drawable/algo_bg123456"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.happyballoons.saket.algon.activity.MainActivity">

    <TextView
        android:text="AlgO(n)"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textSize="50sp"
        android:textColor="#d3f914"
        android:id="@+id/tv_main"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:text="Searching"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="#cf99ef"
        android:layout_height="wrap_content"
        android:id="@+id/btn_main_search"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/btn_main_sort" />

    <Button
        android:text="QUIZ"
        android:textStyle="bold"
        android:background="#ba80dc"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_main_search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/btn_quiz" />

    <Button
        android:text="Sorting"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:background="#ba80dc"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginEnd="41dp"
        android:id="@+id/btn_main_sort"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/btn_ds"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Algorithms:"
        android:textStyle="bold"
        android:textColor="#d3f914"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="40dp"
        android:textSize="37sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignTop="@+id/btn_main_sort"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp" />

    <Button
        android:text="DATA STRUCTURES"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:background="#ba80dc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/btn_ds"
        android:layout_below="@+id/tv_main"
        android:layout_alignParentStart="true" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_home_footer">
    </com.google.android.gms.ads.AdView>



</RelativeLayout>
